 &control
   calculation = 'vc-relax'
   restart_mode = 'from_scratch'
   pseudo_dir = './pseudo/'
   outdir = './out/',
   wfcdir = '/work/funashima/Si2_227',
   disk_io = 'minimal'
   tstress = .true.
   tprnfor = .true.
 /

 &system
   ibrav = 2,
   celldm(1) =    6.70169,
   nat = 2, ntyp = 1, nbnd = 8,
   occupations='smearing', degauss=0.02, smearing='mp',
   ecutwfc =  43.8015,   ecutrho = 175.2061,
   lspinorb = .true.,
   noncolin = .true.,
 /

 &electrons
   diagonalization = 'david',
   electron_maxstep = 500,
   mixing_mode = 'plain',
   mixing_beta = 0.6,
   conv_thr = 1.00000e-09,
 /

 &ions
 /

 &cell
   cell_dynamics = 'bfgs',
   press = 0.000, 
   cell_factor = 2.000,
 /

ATOMIC_SPECIES
  Si   28.0855  Si.rel-pbe-n-kjpaw_psl.1.0.0.UPF

ATOMIC_POSITIONS {crystal}
 Si   0.000000   0.000000   0.000000
 Si   0.250000   0.250000   0.250000

K_POINTS {automatic}
 6 6 6 0 0 0
