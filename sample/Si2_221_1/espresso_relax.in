 &control
   calculation = 'vc-relax',
   restart_mode = 'from_scratch',
   pseudo_dir = './pseudo/',
   outdir = './out/',
   wfcdir = '/work/funashima/Si2_221_1',
   disk_io = 'minimal',
   etot_conv_thr = 1.000e-05,
   forc_conv_thr = 1.000e-04,
   tstress = .true.,
   tprnfor = .true.,
 /

 &system
   ibrav = 1,
   celldm(1) =    3.68808,
   nat = 2, ntyp = 1, nbnd = 8,
   occupations='smearing', degauss=0.02, smearing='mp',
   ecutwfc = 200.0000,   ecutrho = 2400.0000,
 /

 &electrons
   diagonalization = 'david',
   electron_maxstep = 1000,
   mixing_mode = 'plain',
   mixing_beta = 0.6,
   conv_thr = 1.00000e-09,
 /

 &ions
   ion_dynamics = 'bfgs',
 /

 &cell
   cell_dynamics = 'bfgs',
   press = 0.000, 
   cell_factor = 5.000,
 /

ATOMIC_SPECIES
 Si    28.0855  Si.pz-n-rrkjus_psl.1.0.0.UPF

ATOMIC_POSITIONS {crystal}
 Si   0.000000   0.000000   0.000000
 Si   0.500000   0.500000   0.500000

K_POINTS {automatic}
 8 8 8 0 0 0
